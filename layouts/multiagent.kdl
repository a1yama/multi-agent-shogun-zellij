// 家老・足軽セッション用レイアウト（3x3グリッド）
layout {
    pane size=1 borderless=true {
        plugin location="zellij:tab-bar"
    }
    pane split_direction="horizontal" {
        // 上段
        pane split_direction="vertical" size="33%" {
            pane name="karo" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{red}%Bkaro%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru1" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru1%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru2" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru2%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
        }
        // 中段
        pane split_direction="vertical" size="33%" {
            pane name="ashigaru3" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru3%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru4" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru4%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru5" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru5%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
        }
        // 下段
        pane split_direction="vertical" size="34%" {
            pane name="ashigaru6" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru6%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru7" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru7%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
            pane name="ashigaru8" command="zsh" {
                args "-c" "cd ~/multi-agent-shogun && export PROMPT='(%F{blue}%Bashigaru8%b%f) %F{green}%~%f $ ' && clear && zsh"
            }
        }
    }
    pane size=2 borderless=true {
        plugin location="zellij:status-bar"
    }
}
